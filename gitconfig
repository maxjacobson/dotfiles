[alias]
  branches = "! git for-each-ref --sort=committerdate --format=\"%(color:blue)%(authordate:relative)|%(color:red)%(authorname)|%(color:white)%(color:bold)%(refname:short)\" refs/remotes | column -s '|' -t"
  sunrise = commit --allow-empty --message ':sunrise:'
  co = checkout
  st = status
  l = log --pretty='%Cred%h %Creset%<|(58,trunc)%s%n%Cgreen%aN%Creset, %ar%n'
  aa = add -A
  authors = shortlog -sn
  recent-authors = shortlog -sn --since='2 weeks ago'
  rc = rebase --continue
  rs = rebase --skip
  ra = rebase --abort
  rh = reset HEAD --hard
  cp = cherry-pick
  cpc = cherry-pick --continue
  cpa = cherry-pick --abort
  dc = diff --cached
  pick = add . -p
  git = "! git"
  vim = "! vim"
  pro = pull --rebase origin
  pru = pull --rebase upstream
  unstage = restore --staged .
  recent-branches = branch --sort=-committerdate --format=\"%(committerdate:relative)%09%(refname:short)\"
[core]
  editor = vim
  pager = delta --syntax-theme Smyck
[color]
  ui = true
[push]
  default = current
[commit]
  gpgsign = true
[diff "zip"]
  textconv = unzip -c -a
[interactive]
  diffFilter = delta --line-numbers --color-only --syntax-theme Smyck
[pull]
	ff = only
[init]
	defaultBranch = main
[delta]
  features = unobtrusive-line-numbers
[delta "unobtrusive-line-numbers"]
  line-numbers = true
[checkout]
  defaultRemote = origin
[gpg]
