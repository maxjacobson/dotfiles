#!/bin/sh

set -exuo pipefail

# try to connect to the external display _only_
xrandr --output eDP-1-1 --off \
       --output DP-5 --off \
       --output DP-4 --off \
       --output DP-3 --mode 2560x1440 --pos 0x0 --rotate normal \
       --output DP-2 --off \
       --output DP-1 --off \
       --output DP-0 --off

# reset the desktop background
sh ~/.fehbg

# reset because otherwise the font gets big
xsetroot -cursor_name left_ptr
