#!/bin/sh

set -eo pipefail

if [[ -z "$1" ]]; then
  echo "missing first argument"
  exit 1
fi

set -u

summarize_and_remove() {
  if [ -d $1 ]; then
    size="$(du -hs $1 | awk '{print $1}')"
    rm -rf $1
    echo "Freed $size at $1"
  else
    echo "Doesn't exist: $1"
  fi
}

summarize_and_remove ~/.rubies/$1
summarize_and_remove ~/.gem/ruby/$1
