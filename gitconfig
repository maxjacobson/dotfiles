# vim: filetype=gitconfig
# (should be autodetected when editing ~/.gitconfig but isn't when editing ~/.dotfiles/gitconfig
# so I'm setting it manually)

[user]
	name = Max Jacobson
	email = max@hardscrabble.net
	signingKey = ~/.ssh/id_ed25519
[alias]
	aa = add -A
	authors = shortlog -sn
	co = checkout
	cp = cherry-pick
	cpa = cherry-pick --abort
	cpc = cherry-pick --continue
	dc = diff --cached
	git = "! git"
	l = log --pretty='%Cred%h %Creset%<|(58,trunc)%s%n%Cgreen%aN%Creset, %ar%n'
	pick = add . -p
	pro = pull --rebase origin
	pru = pull --rebase upstream
	ra = rebase --abort
	rc = rebase --continue
	recent-authors = shortlog -sn --since='2 weeks ago'
	rh = reset HEAD --hard
	rs = rebase --skip
	st = status
	sunrise = commit --allow-empty --message 'ðŸŒ…'
	unstage = restore --staged .
	vim = "! vim"
[core]
	editor = vim
	pager = delta --syntax-theme Smyck
[push]
	default = current
[commit]
	gpgSign = true
	verbose = true
[gpg]
	format = ssh
[diff]
	algorithm = histogram
[diff "zip"]
	textconv = unzip -c -a
[interactive]
	diffFilter = delta --line-numbers --color-only --syntax-theme Smyck
[pull]
	ff = only
[init]
	defaultBranch = main
[delta]
	features = unobtrusive-line-numbers
[delta "unobtrusive-line-numbers"]
	line-numbers = true
[checkout]
	defaultRemote = origin
[tag]
	gpgSign = true
	forceSignAnnotated = true
[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[branch]
	sort = -committerdate
[fetch]
	prune = true
	prunetags = true
[merge]
	conflictstyle = zdiff3
[includeIf "gitdir:~/FAMLI/"]
	path = ~/.work.gitconfig
[advice]
	addEmptyPathspec = false
