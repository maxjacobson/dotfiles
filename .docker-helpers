function docker-cleanup {
  docker ps -a | grep 'weeks ago' | awk '{print $1}' | xargs docker rm
  docker images | fgrep "<none>" | awk '{print $3}' | xargs docker rmi -f
}

if ! docker ps | grep pinata-ssh | grep Up >/dev/null; then
  printf "starting pinata-ssh-forward. If this hangs, restart docker... "
  pinata-ssh-forward 1>/dev/null 2>/dev/null
  printf "done\n"
fi

alias 'dc'='docker-compose'
alias 'up'='docker-compose --file docker-compose.yml --file docker-compose.docker-sync.yml up -d'
alias 'down'='docker-compose --file docker-compose.yml --file docker-compose.docker-sync.yml down'
alias 'ds'='docker-sync clean && docker-sync start'
