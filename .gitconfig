[user]
  name = Max Jacobson
  email = max@hardscrabble.net
[alias]
  br = "! branch" ; script that helps switch branches, in dotfiles/bin
  bump = "commit --allow-empty -m 'bump'"
  sunrise = "commit --allow-empty -m 'ðŸŒ…'"
  co = checkout
  st = status
  hist = log --pretty=format:'%h %ai | %s%d [%an]' --graph --date=short
  l = log --pretty='%Cred%h %Creset%<|(58,trunc)%s%n%Cgreen%aN%Creset, %ar%n'
  aa = add -A
  q = "! git add . --all && git commit --amend --no-message"
  rc = rebase --continue
  rs = rebase --skip
  ra = rebase --abort
  rh = reset HEAD --hard
  cp = cherry-pick
  cpc = cherry-pick --continue
  cpa = cherry-pick --abort
  d = diff
  dc = diff --cached
  picky = add . -p
  pick = add . -p
  squasher = "! git add -A && git commit -am 'squasher' && git rebase -i HEAD~2"
  p = add . -p
  git = "! git"
  vim = "! vim"
  dif = diff
  rebsae = rebase
  pro = pull --rebase origin
  pru = pull --rebase upstream
[core]
  editor = vim
  excludesfile = /Users/max/.gitignore_global
[color]
  ui = true
[push]
  default = simple
[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustexitcode = true
[merge]
  tool = Kaleidoscope
[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
  prompt = false
[mergetool]
  prompt = false
[diff]
  tool = Kaleidoscope
